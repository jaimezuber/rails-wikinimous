<h1>All articles</h1>
<p>
<%= link_to "New Article", new_article_path %>
</p>
<ul>
  <% @articles.each do |article| %>
    <%= link_to article_path(article) do %>
      <li><%= article.title %></li>
      <%= link_to "Delete",
            article_path(article),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
    <% end %>
  <% end %>
</ul>
